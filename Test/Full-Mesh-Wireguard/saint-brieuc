    100.127.0.3 endpoint-port=12345 interface=wg name=To_Cherbourg \
    public-key="9XO9LK2WU/dfs0VlIEUWfEBOssax59LlovboFUQxAwA="
add allowed-address=100.126.0.1/32,192.168.1.0/24 endpoint-address=\
    100.127.0.1 endpoint-port=12345 interface=wg name=To_Caen public-key=\
    "lfsrTdiO7i95UaqlrbV1yPhQh6RQYMDOWmj+OAGZljw="
/ip address
add address=100.127.0.2/24 interface=ether1 network=100.127.0.0
add address=192.168.2.1/24 interface=ether2 network=192.168.2.0
add address=100.126.0.2/24 interface=wg network=100.126.0.0
/routing ospf interface-template
add area=area-wg disabled=no networks=192.168.2.0/24
add area=area-wg disabled=no interfaces=wg type=nbma
/routing ospf static-neighbor
